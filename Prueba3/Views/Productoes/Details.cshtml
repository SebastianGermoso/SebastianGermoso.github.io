@model Prueba3.Models.Producto

@{
    ViewData["Title"] = "Details";

    Layout = "~/Views/Shared/CliLayout.cshtml";

}
<link rel="stylesheet" href="~/Content/css"/>
<link rel="stylesheet" href="~/Content/PluginsCSS"/>
<script src="~/bundles/modernizr"></script>

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/imagenes/@Model.Imagen" alt="..."></div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(model => model.Nombre)</h1>
                <div class="fs-5 mb-5">
                    <span>S/. @Html.DisplayTextFor(model => model.Precio)</span>
                </div>
                <p class="lead">@Html.DisplayTextFor(model => model.Descripcion)</p>
                <div class="d-flex">
                    <a href="@Url.Action("Hola", "Productoes")" class="btn btn-danger w-50 text-center me-3">
                        <i class="fas fa-undo-alt"></i> Volver
                    </a>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-success btn-agregar-carrito flex-shrink-0 w-50 " type="button" data-idproducto="@Html.DisplayTextFor(model => model.Idproducto)">
                                <i class="fas fa-cart-plus"></i> Agregar al carrito
                            </button>
                        }
                    }
                    
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    

}

