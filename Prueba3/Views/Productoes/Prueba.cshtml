@model IEnumerable<Prueba3.Models.Producto>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col mb-5">
                <div class="card h-100">
                    <img class="card-img-top" src="@item.Imagen" alt="Producto" />
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="fw-bolder">@item.Nombre</h5>
                            <p>@item.Descripcion</p>
                            <p>Precio: @item.Precio</p>
                        </div>
                    </div>
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Idproducto" class="btn btn-primary edit-link">Editar</a>
                            <!-- <a asp-action="Details" asp-route-id="@item.Idproducto">Detalles</a> -->
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>